{
    "name":"bright-cloud-studio/contao-search",
    "description":"Updated version of Asconsulting's ZyppySearch for Contao 5",
    "keywords": ["contao", "search", "bright", "cloud", "studio"],
    "type": "contao-bundle",
    "homepage": "http://brightcloudstudio.com/",
    "license": "LGPL-3.0+",
    "authors":[
        {
            "name": "Bright Cloud Studio",
            "homepage": "https://brightcloudstudio.com",
            "email": "mark@brightcloudstudio.com",
            "role": "Developer"
        }
    ],
    "support":{
        "issues": "https://github.com/bright-cloud-studio/contao-search/issues",
        "source": "https://github.com/bright-cloud-studio/contao-search"
    },
    "require":{
        "php": "^8.1",
        "contao/core-bundle": "^5.3"
    },
    "extra":{
        "contao-manager-plugin": "Bcs\\SearchBundle\\ContaoManager\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "Bcs\\SearchBundle\\": "src"
        },
        "classmap": [
            "src/Resources/contao"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config/",
            "src/Resources/contao/dca/",
            "src/Resources/contao/languages/",
            "src/Resources/contao/templates/"
        ]
    }
}
